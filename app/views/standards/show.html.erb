<h2>Class : <%= @standard.class_name %></h2>

<h3>Students list</h3>

	<%= render 'form' %>

	<% if @students.present? %>
	<table>
		<tr>
			<th>Enrollment number</th>
			<th>Name</th>			
			<th><%= Date.today.strftime("%d/%m/%Y") %></th>
			<th>Total Attendence</th>
		</tr>
		<% @students.each do |student| %>
		<tr>			
			<td><%= student.enrollment_number %></td>
			<% if student.first_name.present? || student.last_name.present? %>
			<td><%= student.first_name + " " + student.last_name %></td>
			<% else %>
			<td></td>
			<% end %>
			<% if current_user.has_role? :Faculty %>
			<td><%= render "attendence" , student: student %></td>			
			<% else %>	
			<td></td>
			<% end %>		
			<td><%= student.attendences.count %></td>
			<% if current_user.has_role? :Faculty %>
			<td><%= button_to "remove student", user_standard_path(student, standard_id: @standard.id), method: :delete  %></td>		
			<% end %>	
		</tr>
		<% end %>
	</table>
	<% else %>
		<h3 style="color: grey;">NOT FOUND</h3>
	<% end %>

<% if current_user.has_role?(:Faculty) %>	
	<%= render "studentlist" %>	
<% elsif current_user.has_role?(:student) %>
	<h3>Your details</h3>
  <table>
		<tr>
			<th>Enrollment number</th>
			<th>Name</th>
			<th>Email</th>
			<th>User name</th>
		</tr>
		<tr>
			<td><%= current_user.enrollment_number %></td>
			<td><%= current_user.first_name + " " + current_user.last_name %></td>
			<td><%= current_user.email %></td>	
			<td><%= current_user.user_name %></td>
			<td><%= button_to "Enroll to this class" , user_standards_path(standard_id: @standard.id , user_id: current_user.id) , method: :post %></td>
		</tr>
	</table>
<% end %><br>
<%= link_to 'Download PDF', download_pdf_standards_path(standard_id: @standard.id)  %><br>

<%= link_to 'Download CSV', standard_path(@standard, format: "csv") %><br>
<%= link_to "Back" , root_path %>